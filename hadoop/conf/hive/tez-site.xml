{%- set version = salt['pillar.get']('hive:tez:version', '0.9.0') -%}
{%- from 'hadoop/hive/settings.sls' import hive with context %}
{%- from 'hadoop/settings.sls' import hadoop with context %}
{%- set dyn_cfg = hive.get('config_tez_site', {}) -%}
<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
  <name>tez.lib.uris</name>
  <value>${fs.defaultFS}/apps/tez/tez.tar.gz#tez,${fs.defaultFS}/apps/tez/gcs.tar.gz#gcs</value>
</property>
    <property>
        <name>tez.lib.uris.classpath</name>
        <value>./tez/*:./tez/lib/*:./gcs/*</value>
    </property>
{%- for name, subdict in dyn_cfg.items() %}
    <property>
        <name>{{ name }}</name>
{%- for k,v in subdict.items() %}
        <{{k}}>{{ v }}</{{k}}>
{%- endfor %}
    </property>
{%- endfor %}
</configuration>
