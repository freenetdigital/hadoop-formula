[Unit]
Description=Knox Gateway
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
PIDFile={{knox.dir}}/pids/gateway.pid
User=knox
Group=knox

ExecStart={{knox.dir}}/bin/gateway.sh start 
ExecStop={{knox.dir}}/bin/gateway.sh stop 

Restart=on-failure
SyslogIdentifier=knox

[Install]
WantedBy=multi-user.target

